{
  "manifest_version": 3,
  "name": "URL Builder",
  "description": "一個用來生成帶 query 的 URL 的工具",
  "version": "1.0.0",
  "action": { "default_title": "Open URL Builder" },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      },
      "description": "打開 URL Builder popup"
    }
  }
}
